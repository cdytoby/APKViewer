<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:APKViewer.WPFApp">

	<local:DefaultImageConverter x:Key="defaultImageConverter" />
	
	<Style
		x:Key="RowPanel_Default"
		TargetType="DockPanel">
		<Setter 
			Property="Height"
			Value="25" />
		<Setter
			Property="Margin"
			Value="3"/>
	</Style>

	<Style
		x:Key="Textbox_FieldDefault"
		TargetType="TextBox">
		<Setter 
			Property="MinHeight"
			Value="25" />
		<Setter 
			Property="VerticalContentAlignment"
			Value="Center"/>
		<Setter
			Property="IsReadOnly"
			Value="True"/>
	</Style>

	<Style
		x:Key="Label_FieldDefault"
		TargetType="Label">
		<Setter
			Property="FontSize"
			Value="12"/>
		<Setter
			Property="MinWidth"
			Value="100"/>
	</Style>

</ResourceDictionary>